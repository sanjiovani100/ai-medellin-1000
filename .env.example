# Example environment variables configuration
# Copy this file to .env.local and update values as needed

# Node environment
NODE_ENV=development  # development, production, or test

# Database configuration (required)
DATABASE_URL=postgresql://postgres:password@localhost:5432/medellin_ai
DATABASE_AUTH_TOKEN=your_database_auth_token_here
DATABASE_POOL_SIZE=10

# API configuration (optional)
API_BASE_URL=https://api.example.com
API_TIMEOUT=30000  # 30 seconds

# Cache configuration (optional)
CACHE_TTL=300  # 5 minutes in seconds

# Application settings (required)
APP_URL=http://localhost:3000
APP_SECRET=your_app_secret_key_min_32_chars_length

# Logging configuration (optional)
LOG_LEVEL=info  # error, warn, info, or debug

# Auth configuration (required)
AUTH_PROVIDER=supabase  # supabase, auth0, or custom
AUTH_SECRET=your_auth_secret_key_here

# Feature flags (optional)
ENABLE_ANALYTICS=false  # true or false
ENABLE_WHATSAPP=false   # true or false